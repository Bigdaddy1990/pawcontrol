{
  "min_covered_version": "2024.1.0",
  "max_covered_version": "2026.12.0",
  "rules": [
    {
      "id": "ha-timeout-migration",
      "description": "async_timeout is deprecated; use asyncio.timeout.",
      "introduced_in": "2024.2.0",
      "pattern": "\\bimport async_timeout\\b",
      "replacement": "import asyncio",
      "file_globs": [
        "**/*.py"
      ]
    },
    {
      "id": "ha-zoneinfo-migration",
      "description": "pytz should be replaced with zoneinfo.",
      "introduced_in": "2024.1.0",
      "pattern": "\\bimport pytz\\b",
      "replacement": "from zoneinfo import ZoneInfo",
      "file_globs": [
        "**/*.py"
      ]
    },
    {
      "id": "ha-datetime-utcnow-migration",
      "description": "datetime.utcnow is deprecated; Home Assistant recommends dt_util.utcnow.",
      "introduced_in": "2024.8.0",
      "pattern": "datetime\\.utcnow\\(\\)",
      "replacement": "dt_util.utcnow()",
      "file_globs": [
        "**/*.py"
      ]
    }
  ]
}
